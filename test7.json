{
  "version": "2",
  "templates": [
    {
      "type": 1,
      "title": "Jellyfin",
      "description": "Jellyfin is a Free Software Media System that puts you in control of managing and streaming your media.",
      "categories": ["docker"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/jellyfin/jellyfin-ux/master/branding/SVG/icon-solid-white.svg",
      "image": "hotio/jellyfin:nightly",
      "ports": [
          "8096:8096/tcp",
          "8920:8920/tcp",
          "7359:7359/udp",
          "1900:1900/udp"
      ],
      "volumes": [
        {
          "container": "/config",
          "bind": "/mnt/appdata/jellyfin"
        },
        {
          "container": "/media",
          "bind": "/mnt/media"
        }
      ],
      "env": [
				{
					"name": "PUID",
					"label": "PUID",
					"default": "1000",
					"description": "for UserID"
				},
				{
					"name": "PGID",
					"label": "PGID",
					"default": "1000",
					"description": "for GroupID"
				},
				{
					"name": "TZ",
					"label": "TZ",
					"default": "America/New_York",
					"description": "Specify a timezone to use for example America/New_York"
				},
				{
					"name": "UMASK",
					"label": "UMASK",
					"default": "002",
					"description": "Specify a umask for file/directory creation."
				}
			],
      "restart_policy": "unless-stopped"
    }
  ]
}
